		//倒计时
		$(function (){
			var s = "{$leftPayTime}";
			var pay_status = "{$detail['pay_status']}";
			if(pay_status != 1){

				return false;
			}
			function getTime(s){
				var m = parseInt(s/60);
				s %=60;
			
				 if (m <= 9 && m>=0) m = '0' + m;
				 if (s <= 9 && s>=0) s = '0' + s;
				 if (m <0) m = '00';
				 if (s <0) s = '00';
				 
				var minute = document.querySelector("#minute_show");
				var second = document.querySelector("#second_show");
				minute.innerHTML = m;
				second.innerHTML = s;
			}
			getTime(s);
			var timer = setInterval(function (){
				s-=1;
				getTime(s);
				if (($("#minute_show").html()=="00") && ($("#second_show").html()=="00")){
					clearInterval(timer);
					$("#leftPayTime").hide();
					$(".leftPayTime").css({"background-color":"#ccc","border-color":"#ccc"});
					$(".leftPayTime-a").attr("href","###");
					$(".leftPayTime").html("订单失效");
