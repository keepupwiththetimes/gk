	}
	
	.pricetext font {
		padding-left: 3%;
		/*font-size: 1.8rem;*/
	}
	
	.rankcollect,
	.rankprice,
	.ranksell,
	.ranktime {
		color: gray;
	}
	
	.gobuy,
	.goget {
		display: inline-block;
		position: relative;
		font-size: 1.3rem;
		/*line-height: 22px;
		height: 22px;*/
		padding-top: 5%;
    	/*padding-bottom: 1%;*/
		width: 100%;
		padding-left: 5%;
		padding-right: 5%;
		border-radius: 3px;
	}

	.goover,
	.gocheck,
	.gosellout {
		display: inline-block;
		position: relative;
		font-size: 1.3rem;
		color: gray;
		/*line-height: 22px;
		height: 22px;*/
		padding-top: 5%;
    	/*padding-bottom: 1%;*/
		width: 100%;
		border: 1px solid gray;
		padding-left: 5%;
		padding-right: 5%;
		border-radius: 3px;
	}
	
	.goodstext>a:last-child {
		display: inline-block;
		width: 36%;
		text-align: center;
		position: absolute;
		bottom: -2%;
		left: 75%;
	}
	
	.searchdetail {
		width: 100%;
		border-top: 1px solid #eee;
	}
	
	ul {
		margin: 0;
		padding: 0;
	}
	
	.footer-main-footer {
		background-color: white;
		padding-top: 7%;
	}
	
	.sale-out {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 100;
	}
	
	.active_end {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 100;
	}
	
	.gray {
		-webkit-filter: grayscale(100%);
		-moz-filter: grayscale(100%);
		-ms-filter: grayscale(100%);
		-o-filter: grayscale(100%);
		filter: grayscale(100%);
		filter: gray;
	}
	
	.noProductTip {
		text-align: center;
		margin-top: 8%;
	}
	
	.boxcolor {
		display: inline-block;
		width: 3px;
		margin-right: 2%;
		height: 15px;
		position: relative;
		top: 4px;
	}
	
	.hide1 {
		display: none;
	}
	
	.zmember {
		position: relative;
		left: 1%;
	}
	
	.shoppingcart {
		position: absolute;
		left: 32%;
		vertical-align: middle;
		display: inline-block;
		width: 39%;
		white-space: nowrap;
		overflow: hidden;
		bottom: -6%;
	}
	
	.shoppingcart span {
		color: grey;
		margin-left: 2%;
	}
	
	.collect i,
	.shoppingcart i {
		font-size: 1.6rem;
	}
	
	.zmember {
		color: grey;
	}
	
	.loading-bg {
		position: fixed;
		width: 100%;
		background-color: rgb(245, 245, 245);
		height: 92%;
		/* background-color: cyan; */
		top: 8%;
		left: 0;
		z-index: 1000;
		/* display: none; */
	}
	
	.waitmore {
		text-align: center;
		position: relative;
		top: 13px;
		font-size: 1.2rem;
		height: 20px;
		line-height: 20px;
		background-color: white;
	}
	
	.primg {
		width: 25%;
		position: relative;
		top: -3px;
	}
	
	.qrimg {
		width: 22%;
		position: relative;
		top: -3px;
	}
	@media screen and (min-device-width: 320px) and (max-device-width: 33px){
	.goodstext{
		height: 77px;
	}
	.gobuy,.goget,.goover,.gocheck,.gosellout {

		padding-top: 0%;

	}
	}
		@media screen and (min-device-width: 320px) and (max-device-width: 330px){
	.goodstext{
		height: 79px;
	}
		.gobuy,.goget,.goover,.gocheck,.gosellout {

		padding-top: 0%;

	}
	}
	@media screen and (min-device-width: 331px) and (max-device-width: 340px){
	.goodstext{
		height: 82px;
	}
	}
			@media screen and (min-device-width: 341px) and (max-device-width: 350px){
	.goodstext{
		height: 84px;
	}
	}
			@media screen and (min-device-width: 351px) and (max-device-width: 360px){
	.goodstext{
		height: 87px;
	}
	}
				@media screen and (min-device-width: 361px) and (max-device-width: 374px){
	.goodstext{
		height: 88px;
	}
	}

		@media only screen and (device-width: 375px) and (max-device-width: 389px) {
		.goodstext{
		height: 93px;
	}	
		.gobuy,.goget,.goover,.gocheck,.gosellout {

		padding-top: 4%;

	}
	}
		@media only screen and (device-width: 390px) and (max-device-width: 402) {
		.goodstext{
		height: 95px;
	}	
	}
		@media only screen and (device-width: 403px) and (max-device-width: 413px) {
		.goodstext{
		height: 98px;
	}	
	}
	@media only screen and (min-device-width: 414px){
		.goodstext{
			height: 99px;
			
		}
			.gobuy,.goget,.goover,.gocheck,.gosellout {

		padding-top: 5%;

	}		
	}
	.fa-arrow-circle-o-up{
		display: inline-block;
		font-size: 4rem;
		color: lightgray;
	}

	
</style>

<body id="body">
	<div class="searchborder" style="display: none">
		<form action="" method="" onsubmit="return false;">
			<input type="search" placeholder="搜索">
			<button id="searchbtn">搜索</button>
		</form>
	</div>
	<div class="searchdetail">
	</div>
	
	<div class="goodssort">
		<span class="goodsall">全部</span>
		<span class="ranksell">销量</span>
		<span class="rankcollect">人气</span>
		<span class="rankprice">券值<i class="fa fa-caret-up"></i><i class="fa fa-caret-down"></i></span>
		<span class="ranktime">时间<i class="fa fa-caret-up"></i><i class="fa fa-caret-down"></i></span>
	</div>

	<div id="wrapper">

		
		<ul class="news-list">
			<volist name="product_info" id="product">
				<li>
					<div class="goodsgroupname">
						<span class="boxcolor"></span>
						<p>{$product.category_name}</p>
					</div>
					<div class="goodsinfo">
						<a onclick="get_sell_num()" href="{$product.url}">
							<div class="goodspic">
								<img src="{$product.home_picture}" onerror="javascript:this.src='__Home_IMG__/zsh2.0/home/wait.png';">
							</div>
						</a>
						
						<div class="goodstext">
							<a onclick="get_sell_num()" href="{$product.url}">
								<span class="nametext">{$product.name}</span>
								<if condition="$product.ifpay eq 1">
									<span class="pricetext">
                                        		省<font>¥{$product.price_value}</font>
                                    </span>
									<else />
									<span class="pricetext">
                                       	 省<font>¥{$product.price_value}</font>
                                    </span>
								</if>
							</a>

							<if condition="$product.iscollect eq 1">
								<span class="collect" id="collect{$product.id}" onclick="collect({$product.id},this)"><i class="fa fa-heart icon animated " style="position: relative;"> <i class="fa fa-heart icon animated hide1" style="position: absolute; top: 0; left: 0;"></i> </i>
                                <span class="zmember">{$product.point}</span>
								</span>
								<else />
								<span class="collect" id="collect{$product.id}" onclick="collect({$product.id},this)"><i class="fa fa-heart-o icon animated " style="position: relative;"> <i class="fa fa-heart icon animated hide1" style="position: absolute; top: 0; left: 0;"></i> </i>
                                <span class="zmember">{$product.point}</span></span>
							</if>
							<span class="shoppingcart">
                                <i class="fa fa-shopping-cart"></i>
                                <span>{$product.saleallquantity}</span>
							</span>
							<a onclick="get_sell_num()" href="{$product.url}">
								<if condition="$product.pay_status eq 2">
									<span class="goover">已结束</span>
								</if>
								<if condition="$product.pay_status eq 3">
									<span class="gosellout">已抢完</span>
								</if>
								<if condition="$product.pay_status eq 4">
									<span class="gocheck">查看</span>
								</if>
								<if condition="$product.pay_status eq 1">
									<span class="gobuy">购买</span>
								</if>
								<if condition="$product.pay_status eq 0">
									<span class="goget">领取</span>
								</if>
							</a>

						</div>
					</div>
				</li>
			</volist>
		</ul>
		<div class="waitmore">上拉加载更多优惠券</div>
	</div>
	<div class="backtop" style="display: none;position: fixed;bottom: 8%;right: 10%;">
		<i class="fa fa-arrow-circle-o-up"></i>
	</div>
	<div class="noProductTip" style="display: none;">
		<p>您搜索的商品不存在</p>
	</div>
	<include FILE="Public:footer" />
	<footer class="footer-main-footer" style="display: none">
		<span>乐天邦</span>版权所有&nbsp;•
		<div class="footer-declaration">
			<span><a
                    href="{:U('Home/Index/disclaimer',array('platcode'=>$platformCode))}">免责声明</a></span>
		</div>
		<div class="customer"><span class="tel-phone">客服:021-62662177&nbsp;</span><span class="work-time">工作日9:30-17:30</span></div>
	</footer>
</body>

<script type="text/javascript">
	
	$('.backtop').click(function(){
		$('body').animate({scrollTop:'0px'},500);
		$('.backtop').hide();
	});
	
	
	var page = 1; //首页
	var isLoadEnd = false; //是否加载完
	var isAllClick = false; //是否点击所以
	var isSellClick = false; //是否点击销量
	var isCollectClick = false; //是否点击人气
	var rnArray = []; //点赞数
	var idArray = []; //点赞ID

	if(window.sessionStorage.getItem("isCollect")) {
		var ckarr = JSON.parse(window.sessionStorage.getItem("isCollect"));
		//			console.log(ckarr);
	} else {
		var ckarr = {};
	}
	var mo = function(e) {
		e.preventDefault();
	}

	function getdata(key, category, order, page) {
		$('.loading-bg').show();
		document.addEventListener('touchmove', mo);
		var dataurl = '__CONTROLLER__/getProductInfoByOption/';
		var timestrap = new Date();
		dataurl = dataurl + "?timestrap=" + timestrap.getTime().toString();
		var item_height = '100%';
		if (window.localStorage.getItem('item_height')) {
			item_height=window.localStorage.getItem('item_height');
		}
		
		var datainfo = {
			key: key,
			category_id: category,
			order_by: order,
			page: page
		};
		$.post(dataurl, datainfo, function(response) {
			$('.news-list').html('');
			var strinfo = '';
			var preimg = "javascript:this.src='__Home_IMG__/zsh2.0/home/wait.png';";
			var endimg = '<img src="__Home_IMG__/zsh2.0/home/active_end.png" alt="" onerror="' + preimg + '" class="active_end"/>';
			var saleoutimg = '<img src="__Home_IMG__/zsh2.0/home/sale_out.png" alt="" onerror="' + preimg + '" class="sale-out"/>';
			//处理数据
			var strprice = '';
			var strcollect = '';
			var strnocollect = '';
			var buynumer = "";
			if(parseInt(JSON.parse(response)) == 2) {

				$('.waitmore').html('更多优惠券敬请期待');

				$('.footer-main-footer').show();
				return;
			} else {
				
				$.each(JSON.parse(response), function(index, v) {
	
					buynumer = '<span class="shoppingcart"><i class="fa fa-shopping-cart"></i><span>' + v['saleallquantity'] + '</span></span>'

					$('.noProductTip').hide();

					strinfo += '<li><div class="goodsgroupname"><span class = "boxcolor"></span><p>' + v['category_name'] + '</p></div>';

					if(v['ifpay'] == 1) {
						strprice = '<div class="goodstext" style ="height:'+item_height+'"><a onclick="get_sell_num()"  href="' + v['url'] + '"><span class="nametext">' + v['name'] + '</span><span class="pricetext">省<font>¥' + v['price_value'] + '</font></span></a>';
					} else {
						strprice = '<div class="goodstext" style ="height:'+item_height+'"><a onclick="get_sell_num()" href="' + v['url'] + '"><span class="nametext">' + v['name'] + '</span><span class="pricetext">省<font>¥' + v['price_value'] + '</font></span></a>';
					}

					if(v['iscollect'] == 1) {
						strcollect = '<span class="collect" id ="collect' + v['id'] + '" onclick = "collect(' + v['id'] + ',this)"><i class="fa fa-heart icon animated " style="position: relative;"> <i class="fa fa-heart icon animated hide1" style="position: absolute; top: 0; left: 0;"></i> </i><span class="zmember">' + v['point'] + '</span></span>' + buynumer;
					} else {
						strnocollect = '<span class="collect" id ="collect' + v['id'] + '" onclick = "collect(' + v['id'] + ',this)"><i class="fa fa-heart-o icon animated "style="position: relative;"> <i class="fa fa-heart icon animated hide1" style="position: absolute; top: 0; left: 0;"></i> </i><span class="zmember">' + v['point'] + '</span></span>' + buynumer;
					}

					if(v['pay_status'] == 1) {

						strinfo += '<div class="goodsinfo"><a onclick="get_sell_num()" href = "' + v['url'] + '"><div class="goodspic"><img src="' + v['home_picture'] + '"onerror="' + preimg + '"/></div></a>';

						strinfo += strprice;

						if(v['iscollect'] == 1) {
							strinfo += strcollect;
						} else {
							strinfo += strnocollect;
						}

						strinfo += '<a onclick="get_sell_num()" href ="' + v['url'] + '"><span class="gobuy">购买</span></a></div></div></li>';
					} else if(v['pay_status'] == 2) {
						strinfo += '<div class="goodsinfo"><a onclick="get_sell_num()" href = "' + v['url'] + '"><div class="goodspic"><img class="gray" src="' + v['home_picture'] + '"onerror="' + preimg + '"/>' + endimg + '</div></a>';

						strinfo += strprice;

						if(v['iscollect'] == 1) {
							strinfo += strcollect;
						} else {
							strinfo += strnocollect;
						}

						strinfo += '<a onclick="get_sell_num()" href ="' + v['url'] + '"><span class="goover">已结束</span></a></div></div></li>';
					} else if(v['pay_status'] == 3) {
						strinfo += '<div class="goodsinfo"><a href = "' + v['url'] + '"><div class="goodspic"><img class="gray" src="' + v['home_picture'] + '"onerror="' + preimg + '"/>' + saleoutimg + '</div></a>';

						strinfo += strprice;

						if(v['iscollect'] == 1) {
							strinfo += strcollect;
						} else {
							strinfo += strnocollect;
						}

						strinfo += '<a onclick="get_sell_num()" href ="' + v['url'] + '"><span class="gosellout">已抢完</span></a></div></div></li>';
					} else if(v['pay_status'] == 4) {
						strinfo += '<div class="goodsinfo"><a onclick="get_sell_num()" href = "' + v['url'] + '"><div class="goodspic"><img src="' + v['home_picture'] + '"onerror="' + preimg + '"/></div></a>';

						strinfo += strprice;

						if(v['iscollect'] == 1) {
							strinfo += strcollect;
						} else {
							strinfo += strnocollect;
						}

						strinfo += '<a onclick="get_sell_num()" href ="' + v['url'] + '"><span class="gocheck">查看</span></a></div></div></li>';
					} else {
						strinfo += '<div class="goodsinfo"><a onclick="get_sell_num()" href = "' + v['url'] + '"><div class="goodspic"><img src="' + v['home_picture'] + '"onerror="' + preimg + '"/></div></a>';

						strinfo += strprice;

						if(v['iscollect'] == 1) {
							strinfo += strcollect;
						} else {
							strinfo += strnocollect;
						}

						strinfo += '<a onclick="get_sell_num()" href ="' + v['url'] + '"><span class="goget">领取</span></a></div></div></li>';
					}

				});

				$('.loading-bg').hide();
				document.removeEventListener('touchmove', mo);
				$('.news-list').html(strinfo);
				$('.waitmore').html('上拉加载更多优惠券');

			}
		});
//				$('.goodstext').css('height', $('.goodspic img').css('height'));
	}



	var ordersell = "Saleinc"; //销量升序
	var orderprice = "priceinc"; //价格升序
	var ordertime = "dateinc"; //时间升序
	var ordercollect = "datedesc"; //人气升序
	var selectcase = 5;

	$('title').html('乐天邦 - 您的专享优惠');
	//初始化
	//  getdata("","",'',1);

	//新版首页2017.04.12
	//create by gk 2017-4-17
	$("#searchbtn").click(function() {
		if($('#searchbtn').html() == "取消") {
			$('.searchdetail').hide();
			$('#searchbtn').html('搜索');
			$('.searchborder input').val('');
			return;
		}
		if($('.searchborder input').val() == "") {
			$('.searchdetail').hide();
			$('.searchborder input').val('');
			return;
		}

		var key = $('.searchborder input').val();
		var category_id = "";
		var order_by = '';
		page = 1;
		selectcase = 5;
		$('.searchdetail').hide();
		getdata(key, category_id, order_by, page);

	});

	$('.searchborder input').focus(function() {
		$('#searchbtn').html('取消');
		var bdheight = $('body').css('height');
		bdheight = parseInt(bdheight)
		var seheight = $('.searchborder').css('height');
		seheight = bdheight - parseInt(seheight);
		$('.searchdetail').css('height', seheight);
		$('.searchdetail').show();

	});


	$('.searchborder input').keydown(function(e) {
		if(e.keyCode === 13) {
			var key = $('.searchborder input').val();
			var category_id = "";
			var order_by = '';
			page = 1;
			selectcase = 5;
			$('.searchdetail').hide();
			document.activeElement.blur();
			getdata(key, category_id, order_by, page);
			//	        $('.searchborder input').val('');
			$('#searchbtn').html('搜索');
		}
	});

	//点击销量排序
	$('.ranksell').click(function() {

		if(isSellClick == 1) {
